<div class="page-header">
  <h4><%= "Detail of #{@todo.name}:" %></h4>
</div>


<div class="row">
  <div class="span6">
    <%= link_to "New Todo Item", new_todo_list_path, class: 'btn' %>
  </div>
</div>

<br />


<div class="row">
  <div class="span6">
    <ul id='todo-items-container' data-todo-list = "<%= @todo.id %>">
      <% @todo_items.each_with_index do |todo_item, idx| %>
        <li data-todo-item="<%= todo_item.id %>">
          <span class="ui-icon ui-icon-arrowthick-2-n-s"></span>
          <span class="order-number"><%= todo_item.position %></span>
          <%= todo_item.task_name %>
        </li>
      <% end %>
    </ul>
  </div>
</div>


.row
  .span6
    %table{class: 'table table-bordered'}
      %thead
        %tr
          %th #
          %th Task Name
          %th Detail
          / %th Action

      %tbody{:id => 'todo-items-container', 'data-todo-list' => @todo.id}
        - @todo_items.each_with_index do |todo_item, idx|
          %tr{'data-todo-item' => todo_item.id}
            %td
              %span{class: 'order-number'}= idx+1
            %td= todo_item.task_name
            %td= todo_item.detail
            / %td
            /   = link_to 'Action', '#', class: 'btn'
            /   = link_to 'Action', '#', class: 'btn btn-danger'


<%= call_js_init("Todo.initShowTodoPage();") %>