.row
  .span6
    = link_to "New Todo", new_todo_list_path, class: 'btn'

%br


.row
  - @todo_lists.each_with_index do |todo, idx|
    .span4
      %h3= todo.name
      %p= todo.description
      %table{class: 'table table-bordered'}
        %thead
          %tr
            %th #
            %th Task Name
            %th Detail
            / %th Action

        %tbody{:id => 'todo-items-container', 'data-todo-list' => todo.id, class: 'sortable-todo-list'}
          - todo.todo_items.each_with_index do |todo_item, idx|
            %tr{'data-todo-item' => todo_item.id, 'data-todo-list' => todo.id}
              %td
                %span{class: 'order-number'}= todo_item.position
              %td= todo_item.task_name
              %td= todo_item.detail


= call_js_init('Todo.initAllTodoListPage();')
